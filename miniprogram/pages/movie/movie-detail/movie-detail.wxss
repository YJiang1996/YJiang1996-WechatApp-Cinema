/* pages/movie/movie-detail/movie-detail.wxss */
@import "../stars/stars-tpl.wxss";

.movie-detail-container {
  display: flex;
  flex-direction: column;
}

.head-img-box {
  height: 214px;
  width: 100%;
  overflow: hidden;
}

.head-img {
  width: 100%;
  height: 200px;
  -webkit-filter: blur(50px);
}

.head-img-hover {
  color: black;
  width: 100%;
  height: 380rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  margin-top: 50rpx;
  margin-left: 50rpx;
  letter-spacing: 2px;
}

.Eng-title-box {
  width: 250px;
}

.Eng-title {
  font-size: 28rpx;
  color: #fff;
  margin-left: 50rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.sub-title {
  color: #fff;
  font-size: 28rpx;
  margin-left: 50rpx;
  margin-top: 5rpx;
}

.tool {
  text-align: center;
}

.tool-item {
  display: inline-block;
  vertical-align: top;
  border: 1px solid white;
  border-radius: 8rpx;
  background-color: #BDBDBD;
  width: 40%;
  height: 30px;
  margin: 10px 12px 0px 12px;
}

.tool-item image {
  height: 38rpx;
  width: 38rpx;
  vertical-align: -4px;
  margin-left: -18px;
  margin-right: 30rpx;
}

.tool-item text {
  color: white;
  font-size: 26rpx;
}

.movie-img {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 58rpx;
  right: 50rpx;
}

.summary {
  margin: 30rpx 30rpx 0 50rpx;
  color: #777;
}

.summary:last-child {
  margin-top: 50rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.mark {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}

.hr {
  margin-top: 35rpx;
  height: 1px;
  width: 100%;
  background-color: #d9d9d9;
}

.synopsis {
  margin-left: 50rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.synopsis-font {
  color: #999;
}

.summary-content {
  margin-top: 20rpx;
  margin-right: 50rpx;
  line-height: 50rpx;
  letter-spacing: 1px;
}

.button {
  margin-top: 0.8em;
  margin-bottom: 0.5em;
  background-color: red;
  type: warn;
  height: 35px;
  width: 86%;
  color: white;
  text-align: center;
  font-size: 14px;
}
